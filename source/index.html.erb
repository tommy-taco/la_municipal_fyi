---
title: LA Municipal.FYI
---


	<div class="container">
		<h1>Ballot</h1>
	</div>
	  
	<div class="container">
	  
		<div class="rowsOfItems">
		
			<% data.election.races.each do |r| %>
			
				<div style="width:100%">
					
					<div style="padding-top: 20px;">
						<h2><%= r.title %></h2>
						<% if r.measure===false %>
						<div class="row">
							<div class="description">
								<p><%= r.description %></p><strong>Candidates</strong>
							</div>		
							<div class="col-md-12">
								<% r.candidates.each do |c| %>
									<%= partial("candidate", :locals => { :name => c.name, :title => c.title, :website => c.website, :image => c.image, :incumbent => c.incumbent, :endorsed => c.endorsed} ) %>
								<% end %>
							</div>
						</div>
						<% else %>
						<div class="row">
							<div class="description">
								<p><%= r.description %></p><strong>Yes and No</strong>
							</div>
							<div class="col-md-12">
							
							</div>
						</div>
						<% end %>
					</div>
				
				</div> <! width 100% !> 
			
			<% end %><! do loop !>
		
		</div> <!colmd9!>
		
	</div>